<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>LoginPage.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>controller.loginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mainController</servlet-name>
        <servlet-class>mainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerController</servlet-name>
        <servlet-class>controller.registerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>clientAdd</servlet-name>
        <servlet-class>controller.clientAdd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>subClient</servlet-name>
        <servlet-class>controller.subClient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>campiagn</servlet-name>
        <servlet-class>controller.campiagn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>settings</servlet-name>
        <servlet-class>controller.settings</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>emailConfigure</servlet-name>
        <servlet-class>controller.emailConfigure</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addTemplate</servlet-name>
        <servlet-class>controller.addTemplate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>subject</servlet-name>
        <servlet-class>controller.subject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>launch</servlet-name>
        <servlet-class>controller.launch</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/loginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mainController</servlet-name>
        <url-pattern>/mainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerController</servlet-name>
        <url-pattern>/registerController</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>mongoInit</listener-class>
    </listener>
    <servlet-mapping>
        <servlet-name>clientAdd</servlet-name>
        <url-pattern>/clientAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>subClient</servlet-name>
        <url-pattern>/subClient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>campiagn</servlet-name>
        <url-pattern>/campiagn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>settings</servlet-name>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>emailConfigure</servlet-name>
        <url-pattern>/emailConfigure</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addTemplate</servlet-name>
        <url-pattern>/addTemplate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>subject</servlet-name>
        <url-pattern>/subject</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>launch</servlet-name>
        <url-pattern>/launch</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
